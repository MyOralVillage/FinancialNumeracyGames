    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_answer0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="checkAnswer">

            <ImageView
                android:id="@+id/img_answer0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blank_sign" />

            <TextView
                android:id="@+id/tv_answer0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/img_answer0"
                android:layout_alignRight="@+id/img_answer0"
                android:layout_marginTop="23sp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="50sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_answer1"
