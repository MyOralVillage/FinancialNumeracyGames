            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/home"
            android:onClick="setHomeButton" />
    </RelativeLayout>

